<div class = "textfont">
	<% unless(@skillDetails.nil?)%>	
		<table>
			<tr>
				<td><p><div class = "textfont">Click on the <%= link_to "Add", {:controller => "employee", :action => "popupForSkill"},  :onclick=>"window.open(this.href,'myEducationPopup', 'height=450,width=530,top=250,left=600' ); return false;" %> button to add your Educational Details</div></p></td>
			</tr>
			<tr>	
				<td>
					<div STYLE="margin-left: 0%">
						<table width="100%" border="0" cellpadding="5" cellspacing="0">
							<tr bgcolor="#edf2f4">
								<td width ="50">Category</td>
								<td width ="50">Speciality</td>
								<td width ="200" >Skills</td>
							</tr>
							<% @skillDetails.each do |value| %>	
								<tr>
									<td width ="50"><%= value['categoryName'].to_s %></td>
									<td width ="50"><%= value['specialityName'].to_s %></td>
									<td width ="200"><%= value['skillName'].to_s %></td>
								</tr>
							<% end %>
						</table>
					</div>
				</td>
			</tr>
		</table>
	<% end %>
</div>

